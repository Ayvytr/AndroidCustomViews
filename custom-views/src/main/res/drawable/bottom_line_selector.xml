<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape>
                    <solid android:color="#00FFFFFF"/>

                    <stroke
                        android:width="1dp"
                        android:color="#3193ff"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape>
                    <solid android:color="#00FFFFFF"/>

                    <stroke
                        android:width="1dp"
                        android:color="#ccc"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
